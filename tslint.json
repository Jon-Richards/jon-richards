{
    "extends": "gts/tslint.json",
    "rules": {
        "completed-docs": true,
        "max-line-length": [
            true,
            {
                "severity": "warning",
                "limit": 80,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "no-consecutive-blank-lines": [true],
        "indent": [true, "spaces", 2],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-snake-case"
            ]
        }
    }
}
