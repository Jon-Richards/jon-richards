{
    "extends": "gts/tslint.json",
    "rules": {
        "completed-docs": [
            true,
            {
                "classes": { "visibilities": ["exported"] },
                "enums": { "visibilities": ["exported"] },
                "functions": { "visibilities": ["exported"] },
                "methods": {
                    "locations": ["all"],
                    "privacies": ["public", "protected"]
                },
                "namespaces": { "visibilities": ["exported"] },
                "properties": { 
                    "locations": ["all"],
                    "privacies": ["public", "protected"]
                },
                "interfaces": { "visibilities": ["exported"] },
                "types": { "visibilities": ["exported"] },
                "variables": { "visibilities": ["exported"] }
            }
        ],
        "max-line-length": [
            true,
            {
                "severity": "warning",
                "limit": 80,
                "ignore-pattern": "^import |^export {(.*?)}"
            }
        ],
        "no-consecutive-blank-lines": [true],
        "indent": [true, "spaces", 2],
        "variable-name": {
            "options": [
                "ban-keywords",
                "check-format",
                "allow-leading-underscore",
                "allow-snake-case"
            ]
        }
    }
}
