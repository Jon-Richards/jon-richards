{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "checkJs": false,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".", // required for paths to resolve
    "paths": { // relative to baseUrl
      "Controllers": ["dev/controllers/*"],
    },
  },
  "include": [
    "dev/**/*.ts",
    "dev/**/*.tsx"
  ],
  "exclude": [
    "dev/**/*.test.ts"
  ]
}
