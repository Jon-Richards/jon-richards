{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./dist",
    "jsx": "react",
    "lib": ["es2018", "dom"],
    "checkJs": false,
    "declaration": false,
    "sourceMap": true,
    "baseUrl": ".", // required for paths to resolve
    "paths": { // relative to baseUrl
      "Action_creators/*": ["dev/app/action_creators/*"],
      "Config/*": ["dev/app/config/*"],
      "Lib/*": ["dev/app/lib/*"],
      "Store/*": ["dev/app/store/*"],
      "Views/*": ["dev/app/views/*"]
    },
  },
  "include": [
    "dev/**/*.ts",
    "dev/**/*.tsx"
  ],
  "exclude": [
    "dev/**/*.test.ts"
  ]
}
