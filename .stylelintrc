{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [ true, {
      "ignoreAtRules": [
        "extends",
        "mixin",
        "include",
        "error",
        "warn",
        "function",
        "return"
      ]
    }],
    "block-no-empty": null,
    "unit-whitelist": ["em", "rem", "%", "s", "deg", "vh", "vw"],
    "max-empty-lines": 1,
    "max-line-length": 80,
    "indentation": 2,
    "max-nesting-depth": 3,
    "selector-combinator-blacklist": ["+", "~", ">", "*"],
    "selector-pseudo-class-no-unknown": [ true, {
      "ignorePseudoClasses": [
        "global"
      ]
    }]
  }
}